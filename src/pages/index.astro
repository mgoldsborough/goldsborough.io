---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('posts');

// Sort posts by date descending
posts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

// Filter to featured posts only (2020+) for main listing
const featuredPosts = posts.filter(post => post.data.date.getFullYear() >= 2020);

// Helper to format date
const formatDate = (date: Date) => {
  return date.toLocaleDateString('en-US', {
    day: 'numeric',
    month: 'short',
    year: 'numeric',
    timeZone: 'UTC'
  });
};
---

<BaseLayout
  title="Mathew Goldsborough | Founder & Engineer"
  description="Founder & CEO of NimbleBrain, building conversational automation. Previously co-founded Forever Oceans. TEDx speaker. Fast Company Most Innovative (2023)."
  og={{ website: true }}
>
  <!-- Hero Section -->
  <section class="page-hero">
    <div class="hero-label animate-in">Founder & Engineer</div>
    <h1 class="hero-title animate-in animate-in-delay-1">Mathew<br/>Goldsborough</h1>
    <div class="hero-accent animate-in animate-in-delay-2"></div>
    <p class="hero-bio animate-in animate-in-delay-3">
      Building <a href="https://www.nimblebrain.ai">NimbleBrain</a>, a conversational automation platform.
      Previously co-founded Forever Oceans, scaling autonomous ocean farming globally.
      <a href="/speaking">TEDx speaker</a>. Fast Company Most Innovative. 4 patents.
    </p>
  </section>

  <!-- Two Column Layout -->
  <div class="content-grid animate-in animate-in-delay-4">

    <!-- Left Column: Latest Talk -->
    <section class="left-column">
      <h2 class="column-heading">Latest Talk</h2>
      <a
        href="https://www.youtube.com/watch?v=45FgK9169zU"
        class="talk-link"
        target="_blank"
        rel="noopener noreferrer"
      >
        <div class="talk-thumbnail">
          <img
            src="https://img.youtube.com/vi/45FgK9169zU/maxresdefault.jpg"
            alt="Orchestrating Intelligence with MCP"
          />
          <div class="play-button">
            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" viewBox="0 0 16 16">
              <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
              <path d="M6.271 5.055a.5.5 0 0 1 .52.038l3.5 2.5a.5.5 0 0 1 0 .814l-3.5 2.5A.5.5 0 0 1 6 10.5v-5a.5.5 0 0 1 .271-.445z"/>
            </svg>
          </div>
        </div>
        <div class="talk-info">
          <span class="talk-title">Orchestrating Intelligence with MCP</span>
          <span class="talk-meta">The Context · 2025</span>
        </div>
      </a>
      <a href="/speaking" class="see-all">More talks</a>
    </section>

    <!-- Right Column: Writing -->
    <section class="right-column">
      <h2 class="column-heading">Writing</h2>

      <ul class="writing-list">
        {featuredPosts.slice(0, 5).map((post, i) => (
          <li class="writing-item">
            <a href={`/${post.id}`} class="writing-link">
              <span class="writing-title">{post.data.title}</span>
            </a>
          </li>
        ))}
      </ul>

      {featuredPosts.length > 5 && (
        <a href="/archive" class="see-all">All articles</a>
      )}
    </section>

  </div>

</BaseLayout>

<style>
  /* Content Grid */
  .content-grid {
    display: grid;
    gap: var(--space-xl);
    padding-bottom: var(--space-xl);
  }

  @media (min-width: 768px) {
    .content-grid {
      grid-template-columns: 1.4fr 1fr;
      gap: calc(var(--space-xl) * 1.5);
    }
  }

  /* Column Headings - Gold left accent */
  .column-heading {
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--text-muted);
    margin-bottom: var(--space-lg);
    padding-left: var(--space-md);
    border-left: 2px solid var(--accent-primary);
    font-variation-settings: 'opsz' 8;
  }

  /* Left Column: Talk */
  .talk-link {
    display: block;
    text-decoration: none;
    margin-bottom: var(--space-md);
  }

  .talk-thumbnail {
    position: relative;
    aspect-ratio: 16/9;
    overflow: hidden;
    border-radius: 6px;
    margin-bottom: var(--space-sm);
  }

  .talk-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: opacity var(--transition-fast), transform var(--transition-base);
  }

  .talk-link:hover .talk-thumbnail img {
    opacity: 0.9;
    transform: scale(1.02);
  }

  .play-button {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: white;
    opacity: 0.9;
    filter: drop-shadow(0 2px 8px rgba(0, 0, 0, 0.5));
    transition: opacity var(--transition-fast), transform var(--transition-fast);
  }

  .talk-link:hover .play-button {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1.05);
  }

  .talk-info {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: var(--space-sm);
  }

  .talk-title {
    font-size: 1.1rem;
    font-weight: 500;
    color: var(--text-primary);
    transition: color var(--transition-fast);
  }

  .talk-link:hover .talk-title {
    color: var(--accent-primary);
  }

  .talk-meta {
    font-size: 0.75rem;
    color: var(--text-muted);
    letter-spacing: 0.02em;
    flex-shrink: 0;
  }

  /* Right Column: Writing */
  .writing-list {
    list-style: none;
    padding: 0;
    margin: 0 0 var(--space-lg) 0;
  }

  .writing-item {
    /* No borders */
  }

  .writing-link {
    display: block;
    padding: var(--space-sm) 0;
    text-decoration: none;
    transition: padding-left var(--transition-fast);
  }

  .writing-link:hover {
    padding-left: var(--space-sm);
  }

  .writing-title {
    font-size: 0.95rem;
    font-weight: 500;
    color: var(--text-primary);
    line-height: 1.4;
    transition: color var(--transition-fast);
  }

  .writing-link:hover .writing-title {
    color: var(--accent-primary);
  }

  /* See All Link */
  .see-all {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    font-size: 0.8rem;
    font-weight: 500;
    color: var(--text-muted);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .see-all::after {
    content: '→';
    transition: transform var(--transition-fast);
  }

  .see-all:hover {
    color: var(--accent-primary);
  }

  .see-all:hover::after {
    transform: translateX(4px);
  }
</style>
