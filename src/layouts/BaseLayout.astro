---
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  og?: {
    website?: boolean;
    profile?: {
      first_name: string;
      last_name: string;
    };
    article?: boolean;
  };
}

const { title, description, og } = Astro.props;
const canonicalUrl = new URL(Astro.url.pathname, Astro.site);
const ogImageUrl = new URL('/assets/images/mathew-goldsborough-headshot.png', Astro.site);
---

<!DOCTYPE html>
<!-- Astro build -->
<html class="h-100" lang="en" data-bs-theme="dark">
<head>
  <meta charset="utf-8">
  <meta name="generator" content={Astro.generator} />
  <title>{title}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <link rel="canonical" href={canonicalUrl} />

  <!-- open graph -->
  <meta property="og:title" content={title} />
  <meta property="og:url" content={canonicalUrl} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={ogImageUrl} />
  {og?.website && <meta property="og:type" content="website" />}

  {og?.profile && (
    <>
      <meta property="og:type" content="profile" />
      <meta property="profile:first_name" content={og.profile.first_name} />
      <meta property="profile:last_name" content={og.profile.last_name} />
    </>
  )}

  {og?.article && <meta property="og:type" content="article" />}

  <link rel="manifest" href="/manifest.webmanifest">
  <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>üçç</text></svg>">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/highlightjs/cdn-release@11.8.0/build/styles/default.min.css">

  <!-- Google Tag Manager -->
  <script is:inline>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
  new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
  j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
  'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
  })(window,document,'script','dataLayer','GTM-T2GBK88M');</script>
  <!-- End Google Tag Manager -->
</head>
<body class="d-flex flex-column h-100">
  <!-- Google Tag Manager (noscript) -->
  <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-T2GBK88M"
  height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
  <!-- End Google Tag Manager (noscript) -->

  <header>
    <Nav currentPath={Astro.url.pathname} />
  </header>
  <main class="container">
    <div class="row justify-content-center">
      <div class="col-md-12 col-lg-8">
        <slot />
      </div>
    </div>
  </main>

  <Footer />

  <script is:inline src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  <script is:inline src="https://cdn.jsdelivr.net/gh/highlightjs/cdn-release@11.8.0/build/highlight.min.js"></script>
  <script is:inline>
    // highlight any code on the page
    hljs.highlightAll();

    // Configure light/dark toggle
    const toggle = document.getElementById("lightDarkToggle");
    const root = document.querySelector('[data-bs-theme]');

    toggle.addEventListener('click', (e) => {
      e.preventDefault();
      if(root.getAttribute('data-bs-theme') === 'dark') {
        root.setAttribute('data-bs-theme', 'light');
      } else {
        root.setAttribute('data-bs-theme', 'dark');
      }
    });
  </script>
</body>
</html>
