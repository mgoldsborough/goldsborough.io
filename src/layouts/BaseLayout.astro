---
import { ViewTransitions } from 'astro:transitions';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  og?: {
    website?: boolean;
    profile?: {
      first_name: string;
      last_name: string;
    };
    article?: boolean;
  };
}

const { title, description, og } = Astro.props;
const canonicalUrl = new URL(Astro.url.pathname, Astro.site);
const ogImageUrl = new URL('/assets/images/mathew-goldsborough-headshot.png', Astro.site);
---

<!DOCTYPE html>
<!-- Astro build -->
<html class="h-100" lang="en" data-bs-theme="dark">
<head>
  <meta charset="utf-8">
  <meta name="generator" content={Astro.generator} />
  <title>{title}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- Preconnect to external origins for faster resource loading -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preconnect" href="https://www.googletagmanager.com">

  <!-- Preload critical fonts -->
  <link rel="preload" href="/assets/fonts/LeagueSpartan-Regular.ttf" as="font" type="font/ttf" crossorigin>
  <link rel="preload" href="https://fonts.googleapis.com/css2?family=Fraunces:ital,opsz,wght@0,9..144,400;0,9..144,600;1,9..144,400&display=swap" as="style">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Fraunces:ital,opsz,wght@0,9..144,400;0,9..144,600;1,9..144,400&display=swap">

  <!-- Theme management - single source of truth -->
  <script is:inline>
    (function() {
      const getTheme = () => localStorage.getItem('theme') || 'dark';
      const setTheme = (doc, theme) => doc.documentElement.setAttribute('data-bs-theme', theme);

      // Set theme immediately on current document
      setTheme(document, getTheme());

      // Handle View Transitions - set theme on incoming document before swap
      document.addEventListener('astro:before-swap', (e) => {
        setTheme(e.newDocument, getTheme());
      });

      // Handle toggle clicks via delegation
      document.addEventListener('click', (e) => {
        if (e.target.closest('#lightDarkToggle')) {
          e.preventDefault();
          const newTheme = getTheme() === 'dark' ? 'light' : 'dark';
          localStorage.setItem('theme', newTheme);
          setTheme(document, newTheme);
        }
      });
    })();
  </script>
  <ViewTransitions />
  <meta name="generator" content={Astro.generator} />
  <title>{title}</title>
  <meta name="description" content={description} />
  <link rel="canonical" href={canonicalUrl} />

  <!-- open graph -->
  <meta property="og:title" content={title} />
  <meta property="og:url" content={canonicalUrl} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={ogImageUrl} />
  {og?.website && <meta property="og:type" content="website" />}

  {og?.profile && (
    <>
      <meta property="og:type" content="profile" />
      <meta property="profile:first_name" content={og.profile.first_name} />
      <meta property="profile:last_name" content={og.profile.last_name} />
    </>
  )}

  {og?.article && <meta property="og:type" content="article" />}

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={ogImageUrl} />

  <!-- JSON-LD Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Person",
    "name": "Mathew Goldsborough",
    "url": "https://www.goldsborough.io",
    "image": "https://www.goldsborough.io/assets/images/mathew-goldsborough-headshot.png",
    "jobTitle": "Founder & Engineer",
    "worksFor": {
      "@type": "Organization",
      "name": "NimbleBrain"
    },
    "sameAs": [
      "https://www.linkedin.com/in/mathewgoldsborough/"
    ]
  })} />

  <link rel="manifest" href="/manifest.webmanifest">
  <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>üçç</text></svg>">

  
  <!-- Google Tag Manager -->
  <script is:inline>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
  new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
  j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
  'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
  })(window,document,'script','dataLayer','GTM-T2GBK88M');</script>
  <!-- End Google Tag Manager -->
</head>
<body class="d-flex flex-column h-100">
  <!-- Google Tag Manager (noscript) -->
  <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-T2GBK88M"
  height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
  <!-- End Google Tag Manager (noscript) -->

  <header>
    <Nav currentPath={Astro.url.pathname} />
  </header>
  <main class="container">
    <div class="row justify-content-center">
      <div class="col-md-12 col-lg-8">
        <slot />
      </div>
    </div>
  </main>

  <Footer />

  <script>
    import 'bootstrap/dist/js/bootstrap.bundle.min.js';
  </script>
</body>
</html>
