<style>
  .footer-container {
    border-top: 1px solid var(--border);
  }

  .footer-name {
    font-weight: 600;
    color: var(--text-primary);
  }

  .footer-copyright {
    color: var(--text-muted);
  }

  .footer-tagline {
    font-size: 0.85rem;
    color: var(--text-muted);
    margin-top: 0.5rem;
    margin-bottom: 0;
  }

  .footer-tagline a {
    color: var(--text-muted);
    transition: color var(--transition-fast);
  }

  .footer-tagline a:hover {
    color: var(--accent-primary);
  }

  .footer-nav {
    display: flex;
    justify-content: flex-start;
    gap: 1.5rem;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  @media (min-width: 768px) {
    .footer-nav {
      justify-content: flex-end;
    }
  }

  .footer-nav a {
    color: var(--text-muted);
    font-size: 0.9rem;
    transition: color var(--transition-fast);
  }

  .footer-nav a:hover {
    color: var(--accent-primary);
  }
</style>
